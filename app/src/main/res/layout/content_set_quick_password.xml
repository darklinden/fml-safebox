<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:id="@+id/content_setpassword"
    >
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hint_view"
        android:background="@null"
        android:text="@string/patten_hint"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/lock_view"/>

    <com.eftimoff.patternview.PatternView
        xmlns:patternview="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:id="@+id/lock_view"
        patternview:pathColor="@color/colorPrimary"
        patternview:circleColor="@color/colorPrimaryDark"
        patternview:dotColor="@color/colorPrimary"
        patternview:gridRows="4"
        patternview:gridColumns="4"/>

</RelativeLayout>
